<odoo>
    <data>
        <record model="ir.ui.view" id="view_task_project_timesheet_inherit">
            <field name="name">view_task_project_timesheet_inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
            <field name="groups_id" eval="[(6,0, (ref('hr_timesheet.group_hr_timesheet_user'),))]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="line_type"/>
                </xpath>
                <xpath expr="//button[@name='action_open_task']" position="before">
                    <field name="peso"/>
                    <field name="priority_payall"/>
                    <field name="line_type"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>